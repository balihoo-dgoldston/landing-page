        <meta itemprop="openingHours" content="{{thuLabel}}: {{hrsThuOpen}}{{#hrsThuClose}} - {{.}}{{/hrsThuClose}}">
        <h5>{{thuLabel}}:</h5
        <p>{{.}}{{#hrsThuClose}} - {{.}}{{/hrsThuClose}}</p>
      </div>
      {{/hrsThuOpen}}
      {{#hrsFriOpen}}
      <div class="col-xs-6 col-sm-3">
        <meta itemprop="openingHours" content="{{friLabel}}: {{hrsFriOpen}}{{#hrsFriClose}} - {{.}}{{/hrsFriClose}}">
        <h5>{{friLabel}}:</h5
        <p>{{.}}{{#hrsFriClose}} - {{.}}{{/hrsFriClose}}</p>
      </div>
      {{/hrsFriOpen}}
      {{#hrsSatOpen}}
