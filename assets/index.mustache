        <meta itemprop="openingHours" content="{{tueLabel}}: {{hrsTueOpen}}{{#hrsTueClose}} - {{.}}{{/hrsTueClose}}">
        <h5>{{tueLabel}}:</h5
        <p>{{.}}{{#hrsTueClose}} - {{.}}{{/hrsTueClose}}</p>
      </div>
      {{/hrsTueOpen}}
      {{#hrsWedOpen}}
