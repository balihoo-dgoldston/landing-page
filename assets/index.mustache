<div class="container">
  <small>{{{legalCopy}}}</small>
</div>
</div><!-- /.footer -->

<!-- FORM MODAL -->
<div class="modal fade" id="formModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">{{locationName}}</h4>
      </div>
      <form class="form-js" role="form" data-toggle="validator">
        <div class="modal-body">
          <p class="lead hidden thanks">{{thankyouLine1}}</p>
          <p class="lead hidden thanks">{{thankyouLine2}}</p>
          
          <div class="hide-me">
            <input type="hidden" name="listname" value="Landing Page Form Leads">
            <input type="hidden" name="leademail" value="{{email}}">
            <input type="hidden" name="affiliatecompanyid" value="{{AffiliateCompanyID}}">
            <input type="hidden" name="processURL" value="{{leadcaptureurl}}">

            <div class="form-group">
              {{#leadFormLine1}}
              <p class="lead">{{.}}</p>
              {{/leadFormLine1}}
              {{#leadFormLine2}}
              <p class="lead">{{.}}</p>
              {{/leadFormLine2}}
              {{#leadFormLine3}}
              <p class="lead">{{.}}</p>
              {{/leadFormLine3}}
            </div>

            <div class="form-group">
              <label for="inputFirstName" class="control-label">{{placeholderLine1}}</label>
              <input type="text" name="firstname" class="form-control" id="inputFirstName" placeholder="{{placeholderLine1}}" data-error="First Name is required" required>
              <div class="help-block with-errors"></div>
            </div>

            <div class="form-group">
              <label for="inputLastName" class="control-label">{{placeholderLine2}}</label>
              <input type="text" name="lastname" class="form-control" id="inputLastName" placeholder="{{placeholderLine2}}" data-error="Last Name is required" required>
              <div class="help-block with-errors"></div>
            </div>

            <div class="form-group">
              <label for="inputEmail" class="control-label">{{placeholderLine3}}</label>
              <input type="email" name="email" class="form-control" id="inputEmail" placeholder="{{placeholderLine3}}" data-error="Email is required" required>
              <div class="help-block with-errors"></div>
            </div>
            <div class="form-group">
              <label for="inputTel" class="control-label">{{placeholderLine4}}</label>
              <input type="tel" name="tel" class="form-control" id="inputTel" placeholder="{{placeholderLine4}}" data-error="Phone Number is required" required>
              <div class="help-block with-errors"></div>
            </div>
          </div><!-- /.hide-me -->
        </div><!-- /.modal-body -->
        <div class="modal-footer hide-me">
          <button type="button" class="btn btn-default" data-dismiss="modal">{{close}}</button>
          <button type="submit" class="btn btn-success">{{submit}}</button>
        </div>
      </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->