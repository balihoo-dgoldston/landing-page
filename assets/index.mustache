<div class="jumbotron">
  <div class="container">

    <div class="row">
      <div class="col-xs-12">
        <h1>{{primaryHeadline}}</h1>
        <p class="lead">{{{primaryCopy}}}</p>
        {{#primaryButton}}
        <p><a class="btn btn-lg btn-primary ga-website" href="{{website}}" target="_blank">{{.}}</a></p>
        {{/primaryButton}}
      </div>

      {{#hero}}
      <div class="col-xs-12">
        <a class="ga-website" href="{{website}}" target="_blank">
          <img src="{{hero}}" class="img-responsive" alt="{{heroAlt}}" title="{{locationName}}">
        </a>
      </div>
      {{/hero}}

    </div>

  </div><!-- ./container -->
</div><!-- ./jumbo -->


<div class="container">

<!-- NAP + MAP ROW -->
<div class="row" itemscope itemtype="http://schema.org/LocalBusiness">

  <div class="col-sm-12 col-md-3">

      <div class="row">

        {{#locationLogo}}
        <div class="hidden-xs col-xs-12 col-sm-4 col-md-12">
          <img itemprop="logo" src="{{.}}" class="img-responsive" alt="{{locationoAlt}}" title="{{locationName}}">
        </div>

        <div class="hidden-sm hidden-md hidden-lg col-xs-12">
          <img itemprop="logo" src="{{.}}" class="img-responsive center-block" alt="{{locationLogoAlt}}" title="{{locationName}}">
        </div>
        {{/locationLogo}}

        <div class="col-xs-12 col-sm-4 col-md-12 xs-center">
          <h4 itemprop="legalName">{{locationName}}</h4>
          <p class="lead hidden-xs hidden-sm"><strong>{{phoneLabel}}</strong> <span itemprop="telephone"><span class="tel">{{phone}}</span></span></p>

          <p><button class="btn btn-lg btn-primary hidden-xs hidden-sm ga-email" href="#" data-toggle="modal" data-target="#formModal">{{contactUs}}</button></p>

          {{#cell}}
          <p class="hidden-xs hidden-sm"><strong>{{cellLabel}}</strong> <span itemprop="telephone">{{cell}}</span>{{^fax}}</p>{{/fax}}
          {{/cell}}
          {{#fax}}
          {{^cell}}<p class="hidden-xs hidden-sm">{{/cell}}{{#cell}}<br>{{/cell}}<strong>{{faxLabel}}</strong> <span itemprop="faxNumber">{{fax}}</span></p>
          {{/fax}}

          {{#displayEmail}}<p><a itemprop="email" class="ga-email" href="mailto:{{.}}">{{.}}</a></p>{{/displayEmail}}

          <p itemprop="address" itemscope itemtype="http://schema.org/PostalAddress"><span itemprop="streetAddress">{{address1}}<br/>
          {{#address2}}{{.}}<br/>{{/address2}}</span>
          <span itemprop="addressLocality">{{city}}</span>, <span itemprop="addressRegion">{{state}}</span> <span itemprop="postalCode">{{zip}}</span></p>
          <a class="hidden-xs hidden-sm ga-map" itemprop="url" href="https://www.google.com/maps/place/{{address1}}{{#address2}}, {{.}}{{/address2}}, {{city}}, {{state}}, {{zip}}" target="_blank"><small>{{directions}}</small></a>
          {{#social}}
          <div class="social">
             {{>partials/social}}
          </div>
          {{/social}}
        </div>

        <div class="col-xs-12 col-sm-4 col-md-12 xs-center hidden-md hidden-lg">
          {{#contactUs}}<p><button class="btn btn-lg btn-primary ga-email" href="#" data-toggle="modal" data-target="#formModal">{{.}}</button></p>{{/contactUs}}
          {{#phone}}<p itemprop="telephone" class="lead"><span class="tel">{{.}}</span></p>{{/phone}}
          <div itemscope itemprop="hasMap" itemtype="http://schema.org/Map">
            {{#map}}<a class="ga-map" itemprop="url" href="https://www.google.com/maps/place/{{>partials/address}}" target="_blank"><small>{{directions}}</small></a>{{/map}}
          </div>
        </div>

      </div><!-- ./row -->
  </div><!-- /.col -->

  <div class="col-sm-12 col-md-9">
    {{#map}}
    <div itemscope itemprop="hasMap" itemtype="http://schema.org/Map">
      <link itemprop="mapType" href="http://schema.org/TransitMap" />
      <a itemprop="url" class="ga-map" href="{{googleMapLink}}" target="_blank">
        <img src="{{googleMap}}" alt="Map of address" title="Google Map" class="img-responsive">
      </a>
    </div> <!-- ./schema map -->
    {{/map}}
  </div>
</div> <!-- /.row -->

{{#hours}}
<div class="row">
  <div class="panel panel-default top-buffer">

    <div class="panel-heading">
      <h4>{{hoursLabel}}</h4>
    </div>

    <div class="panel-body">
      {{#hrsMonOpen}}
      <div class="col-xs-6 col-sm-3">
        <meta itemprop="openingHours" content="{{monLabel}}: {{hrsMonOpen}}{{#hrsMonClose}} - {{.}}{{/hrsMonClose}}">
        <h5>{{monLabel}}</h5>
        <p>{{.}}{{#hrsMonClose}} - {{.}}{{/hrsMonClose}}</p>
      </div>
      {{/hrsMonOpen}}
      {{#hrsTueOpen}}
