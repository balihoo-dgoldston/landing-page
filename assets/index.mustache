          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#balihoo-navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <a class="navbar-brand ga-logo" href="{{logoURL}}" target="_blank">
            <img src="{{{brandLogoSRC}}}" class="img-responsive brand-logo">
            <p class="sr-only">{{logoAlt}}</p>
          </a>

          {{#cobrandLogo}}
          <a class="navbar-brand hidden-xs ga-website" href="{{website}}" target="_blank">
            <img src="{{.}}" class="img-responsive brand-logo" alt="{{cobrandLogoAlt}}" title="{{locationName}}">
