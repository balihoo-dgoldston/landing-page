        <meta itemprop="openingHours" content="{{satLabel}}: {{hrsSatOpen}}{{#hrsSatClose}} - {{.}}{{/hrsSatClose}}">
        <h5>{{satLabel}}:</h5
        <p>{{.}}{{#hrsSatClose}} - {{.}}{{/hrsSatClose}}</p>
      </div>
      {{/hrsSatOpen}}
      {{#hrsSunOpen}}
      <div class="col-xs-6 col-sm-3">
        <meta itemprop="openingHours" content="{{sunLabel}}: {{hrsSunOpen}}{{#hrsSunClose}} - {{.}}{{/hrsSunClose}}">
        <h5>{{sunLabel}}:</h5
        <p>{{.}}{{#hrsSunClose}} - {{.}}{{/hrsSunClose}}</p>
      </div>
      {{/hrsSunOpen}}
    </div><!-- /.panel-body -->
  </div><!-- /.panel -->
</div><!-- /.row -->
{{/hours}}

</div> <!-- /.container -->


