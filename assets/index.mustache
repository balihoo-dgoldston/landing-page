        <meta itemprop="openingHours" content="{{wedLabel}}: {{hrsWedOpen}}{{#hrsWedClose}} - {{.}}{{/hrsWedClose}}">
        <h5>{{wedLabel}}:</h5
        <p>{{.}}{{#hrsWedClose}} - {{.}}{{/hrsWedClose}}</p>
      </div>
      {{/hrsWedOpen}}
      {{#hrsThuOpen}}
